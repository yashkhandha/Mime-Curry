@{
    ViewBag.Title = "Home Page";
}
@Scripts.Render("~/Content/css")
@section scripts{
    <link href="~/Content/CustomStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularCustom.js"></script>
}

<div id="abc">
    <div class="">
        <img id="banner" src="~/Content/Images/banner3.jpg" class="" width="1000" height="220" />
    </div>
</div>

<div id="jumbotron" class="jumbotron">
    <div class="container-fluid" id="name" style="">

                <h1><img class="img-rounded" src="@Url.Content("~/Content/Images/logo.png")" width="100" height="100" />  Mime & Curry</h1>
    </div>

                <div id="details" class="row">
                    <div class="col-md-4">
                        <h2>Background</h2>
                        <p>
                            Experience traditions as soon as you enter! Beautifully adorned #Mime and Curry is reminiscent of
                            #Spices and Flavours with authentic food !
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h2>Happy Hours</h2>
                        <p>Get two beers at price of ONE. Limited hours !!! <br /> 5 pm - 7 pm only*</p>
                    </div>
                    @if (Request.IsAuthenticated) {
                    <div class="col-md-4">
                        <div ng-app="reviewModule" id="body">
                            <div ng-controller="reviewCtrl">
                                <div ng-hide="Review.ReviewID != '' ">
                                    <div>
                                        <h2>Add Review</h2>
                                    </div>
                                    <div>
                                        <label for="name">Review</label>
                                        <input type="text" data-ng-model="Review.ReviewTitle" class="form-control" />
                                    </div>
                                    
                                    <div class="col-lg-offset-0">
                                        <button data-ng-click="save()" class="btn btn-success">Submit</button>
                                        <button data-ng-click="clear()" class="btn btn-danger">Clear</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
